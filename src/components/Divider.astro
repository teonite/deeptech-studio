---
interface Props {
  vertical?: boolean;
  hidden?: boolean;
}
const { vertical, hidden } = Astro.props;
---

<div class:list={["divider", { vertical, hidden }]}></div>

<style lang="scss">
  @use "@/styles/helpers" as *;

  .divider {
    display: block;
    width: 100%;
    height: 1px;
    padding: 0;
    margin: var(--spacing-l) 0;
    user-select: none;
    background-color: var(--main-text);

    &.vertical {
      width: 1px;
      height: 100%;
      background-color: var(--main-text);
      margin: 0 8px;
      @include media-breakpoint-up(lg) {
        margin: 0 30px;
      }
    }

    &.hidden {
      background-color: transparent !important;
    }
  }
</style>
