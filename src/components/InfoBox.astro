---
interface Props {
  title: string;
  content: string;
  links?: string[];
}

const {title, content, links } = Astro.props;
---

<div class="info-box">
  <div class="info-box-text">
    <h1>{title}</h3>
    <p>{content}</p>
      <div class="links">
        {
          links.map((link) => {
            <div class="link">
              <div class="text">{link}</div>
              <div class="arrow">â†’</div>
            </div>
          })
        }
      </div>
  </div>
</div>

<style lang="scss">
  @use "@/styles/helpers" as *;

  .info-box {
    display: flex;
    width: 740px;
    height: 420px;
    flex-direction: column;
    justify-content: space-between;
    align-items: flex-start;
    flex-shrink: 0;

    border-radius: var(--spacing-S, 20px);
    background: var(--secondary-surfaces);

    .info-box-text {
      display: flex;
      padding: var(--spacing-M, 32px);
      flex-direction: column;
      justify-content: space-between;
      align-items: flex-start;
      flex: 1 0 0;
      align-self: stretch;

      h1 {
        color: var(--main-text, #000);

        /* v3/paragraph */
        font-family: "PP Neue Machina";
        font-size: 32px;
        font-style: normal;
        font-weight: 400;
        line-height: 150%; /* 48px */
        letter-spacing: 3.2px;
      }
      
      p {
        display: -webkit-box;
        -webkit-box-orient: vertical;
        -webkit-line-clamp: 4;
        align-self: stretch;

        overflow: hidden;
        color: var(--main-text, #000);
        text-overflow: ellipsis;

        /* v3/label */
        font-family: "PP Neue Machina";
        font-size: 20px;
        font-style: normal;
        font-weight: 400;
        line-height: 150%; /* 30px */
        letter-spacing: 2px;
      }

      .links {
        display: flex;
        flex-direction: column;
        align-items: flex-start;
        gap: var(--spacing-XS, 8px);
        align-self: stretch;
        .link {
          display: flex;
          height: 72px;
          padding: 0px var(--spacing-S, 20px);
          justify-content: space-between;
          align-items: center;
          align-self: stretch;
          .text {
          color: var(--main-text, #000);
          text-align: right;

          /* v3/label */
          font-family: "PP Neue Machina";
          font-size: 20px;
          font-style: normal;
          font-weight: 400;
          line-height: 150%; /* 30px */
          letter-spacing: 2px;
          }
        }
        .arrow {
          display: flex;
          width: 36px;
          height: 36px;
          transform: rotate(-45deg);
          flex-direction: column;
          justify-content: center;
          color: var(--main-text, #000);
          text-align: right;
          font-family: "PP Neue Machina";
          font-size: 48px;
          font-style: normal;
          font-weight: 300;
          line-height: 150%; /* 72px */
          letter-spacing: 4.8px;
        }
      }
    }
  }
</style>
