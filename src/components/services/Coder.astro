---
interface Props {
  name: string;
  description: string;
  photoUrl?: string;
  ghUrl: string;
}

const { name, description, photoUrl = "/svg/tntBox.svg", ghUrl } = Astro.props;
---

<div class="coder">
  <div class="photo">
    <img src={photoUrl} />
  </div>
  <div class="name">{name}</div>
  <div class="description">{description}</div>
  <div class="gh-icon">
    <a href={ghUrl}>
      <img src="/svg/github-icon.svg" />
    </a>
  </div>
</div>

<style lang="scss">
  @use "@/styles/helpers" as *;

  .coder {
    display: flex;
    flex-direction: column;
    align-items: flex-start;

    padding: 0px var(--spacing-s);
    border-left: 1px solid var(--main-text);
    width: 85%;
    max-width: 457px;
    gap: var(--spacing-s);
    overflow: hidden;
    text-wrap: wrap;
    @include media-breakpoint-down(md) {
      max-width: none;
    }

    .photo {
      width: 200px;
      height: 200px;
      img {
        border-radius: var(--spacing-xs);
      }
    }

    .name {
      @include typography(paragraph);
    }

    .description {
      @include typography(label);
    }
  }
</style>
