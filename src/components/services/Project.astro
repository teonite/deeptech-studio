---
interface Props {
  title: string;
  content: string;
}

const { title, content } = Astro.props;
---

<div class="project">
  <h1>{title}</h1>
  <p>{content}</p>
  <div class="links">
    <slot />
  </div>
</div>

<style lang="scss">
  @use "@/styles/helpers" as *;

  .project {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    width: 100%;
    max-width: 740px;
    min-height: 300px;
    box-sizing: border-box;
    flex-shrink: 0;
    overflow: hidden;
    border-radius: var(--spacing-s, 20px);
    background: var(--secondary-surfaces);
    text-wrap: wrap;
    padding: var(--spacing-m, 32px);

    h1 {
      @include typography(paragraph);
    }

    p {
      @include typography(label);
    }

    .links {
      display: flex;
      flex-direction: column;
      justify-content: flex-start;
      align-items: flex-start;
      row-gap: 10px;
    }
  }
</style>
