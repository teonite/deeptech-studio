---
import PageLink from '../PageLink.astro';

interface Props {
  title: string;
  content: string;
  links?: string[];
}

const {title, content, links } = Astro.props;
---

<div class="info-box">
  <h1>{title}</h3>
  <p>{content}</p>
  <div class="links">
    <PageLink href="https://google.com" text="Google"></PageLink>
    <PageLink href="https://google.com" text="Google"></PageLink>
    {
      links && links.map((link) => {
        <div class="link">
          <div class="text">{link}</div>
          <div class="arrow">â†’</div>
        </div>
      })
    }
  </div>
</div>

<style lang="scss">
  @use "@/styles/helpers" as *;

  .info-box {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    width: 740px;
    max-width: 100%;
    min-height: 420px;
    flex-shrink: 0;
    overflow: hidden;
    border-radius: var(--spacing-S, 20px);
    background: var(--secondary-surfaces);
    text-wrap: wrap;
    padding: var(--spacing-M, 32px);

    h1 {

      font-size: 32px;
      font-style: normal;
      font-weight: 400;
      line-height: 150%;
      letter-spacing: 3.2px;
    }
    
    p {
      font-size: 20px;
      letter-spacing: 2px;
    }

    .links {
      & > * { width: 100%; }
      a::before {
        align: left;
      }
      display: flex;
      flex-direction: column;
      justify-items: flex-start;
      align-items: flex-start;
      row-gap: 10px;
    }
  }
</style>
