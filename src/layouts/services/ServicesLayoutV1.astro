---
import Book from "../../components/Book.astro";
import Divider from "../../components/Divider.astro";
import Root from "../../components/Root.astro";
import type { Services } from "../../content/config";

const { frontmatter } = Astro.props;
const { cover, subtitle, title } = frontmatter as Services;
---

<Root theme="dark">
  <div id="main-wrapper">
    <main>
      <div class="cover-wrapper">
        <img src={cover} alt="page-cover" />
      </div>
      <article>
        <header>
          <h1>{title}</h1>
          {subtitle && <p set:html={subtitle} />}
          <div class="actions">
            <Book />
          </div>
        </header>
        <Divider />
        <slot />
      </article>
    </main>
  </div>
</Root>

<style lang="scss" is:global>
  main {
    background-color: var(--main-background);

    a {
      text-decoration: underline;
      text-underline-offset: 8px;
      color: var(--main-text);

      &:visited {
        color: var(--main-text);
      }
    }

    & > .cover-wrapper {
      width: 100%;
      padding: 0;
      margin: 0;
      position: relative;

      img {
        width: 100%;
        height: 40vh;
        object-fit: cover;

        @include b-up(lg) {
          width: 100%;
          height: auto;
          max-height: 60vh;
        }
      }
    }

    & > article {
      --fonts-scale: 1;
      @include media-breakpoint-down(sm) {
        --fonts-scale: 0.8;
      }
      @include b-up(lg) {
        --fonts-scale: 0.6;
      }

      display: flex;
      flex-flow: column;
      row-gap: var(--spacing-m);
      background-color: var(--main-background);
      box-sizing: border-box;

      padding: var(--spacing-l);

      @include b-up(lg) {
        margin: 64px auto;
        max-width: 1200px;
      }

      section {
        width: 100%;
        display: flex;
        flex-flow: column;
        row-gap: var(--spacing-m);
      }

      div {
        width: 100%;
      }

      & > header {
        width: 100%;
        display: flex;
        flex-flow: column;
        row-gap: var(--spacing-m);
        p {
          @include typography(sub-header);
          color: var(--main-text);
        }
      }
      .actions {
        display: flex;
        flex-flow: row;
        align-items: center;
        justify-content: flex-end;
      }
      h1 {
        @include typography(main-header);
        color: var(--main-text);
      }
      h2 {
        @include typography(section-title);
        color: var(--main-text);
      }
      h3 {
        @include typography(sub-header);
        color: var(--main-text);
      }
      p {
        @include typography(paragraph);
        color: var(--main-text);
        line-height: 2;
      }

      a {
        text-decoration: none;
        text-underline-offset: 8px;
      }

      ul,
      ol {
        padding: 0;
        padding-left: 20px;
        @include b-up(lg) {
          padding-left: 40px;
        }

        &:not(&:first-child) {
          margin-top: 10px;
          @include b-up(lg) {
            margin-top: 20px;
          }
        }

        li {
          position: relative;
          @include typography(paragraph);
          color: var(--main-text);
          line-height: 1.2;

          &:not(&:first-child) {
            margin-top: 10px;

            @include b-up(lg) {
              margin-top: 20px;
            }
          }
        }
      }

      ul {
        list-style: none;

        li {
          &::before {
            user-select: none;
            position: absolute;
            top: 0;
            left: -40px;
            content: "\2022";
            color: var(--main-text);

            @include media-breakpoint-down(lg) {
              left: -20px;
            }
          }
        }
      }

      img {
        width: auto;
        height: auto;
        max-width: 100%;
      }

      .img-wrapper {
        width: 100%;
        img {
          object-fit: cover;
        }
      }

      blockquote {
        border-left: 2px solid var(--main-text);
        padding-left: 20px;
        margin: 0;
        overflow: auto;
      }

      figure {
        margin: 0;
        @include typography(footer);
        color: var(--main-text);
      }

      figcaption {
        padding-top: 10px;
      }
    }
  }
</style>
